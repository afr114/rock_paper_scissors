<h1>Let's play rock, paper, scissors</h1>
<form action="/rps">
  <div class="form-group">
    <label for="choice">Choose rock, paper or scissors.<br>
    </label>
    <!-- <input id="word" name="word" class="form-control" type="text"> -->
    <label for="rock"><br>Rock.
    </label>
    <input type="radio" id="player_choice_rock" name="player" value="ROCK" checked="checked"/>
    <label for="Scissors"><br>Scissors.
    </label>
    <input type="radio" id="player_choice_scissors" name="player" value="SCISSORS" />
    <label for="Paper">
    <br>Paper.
    </label>
    <input type="radio" id="player_choice_paper" name="player" value="PAPER" />
  </div>
  <button type="submit" class="btn-success">Submit</button>

</form>
